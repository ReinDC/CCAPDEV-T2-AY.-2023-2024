{{> navbar}}

<link rel="stylesheet" href="/css/edit-review.css">
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

<div class = "estab-reviews-container">

      <div class = "review-profile">
        <div class = "img-box">
          <img src = "{{reviewer.profpic}}" />
        </div>

        <div class = "title-and-name-box">

          <div class = "title-text">
            Title:
            <textarea class="title-textarea" name="review-title">{{review.reviewTitle}}</textarea>
            <input type="number" id="reviewID" value="{{review.reviewID}}" hidden>
            <input type="number" id="reviewID" value="{{review.resturantID}}" hidden>

          </div>

          <div class = "name-text">
            By: {{reviewer.username}}
          </div>    
        </div>

        <div class = "button-reco-container">

          <button class = "button-btn-reco" id = "recoBtn" onclick=reco()>‚≠ê Recommended</button>
          <button class = "button-btn-notreco" id = "notRecoBtn" onclick=notreco()>üëé Not recommended</button> 
        </div>
      </div>
      
      <div class = "text-container">
        <textarea class="review-textarea" name ="review" rows = "10" cols = "10">{{review.reviewContent}}</textarea>
      </div>
      
      <div class="button-container">
        <button class="button-delete" onclick="deleteReview()">Delete Review</button>
        <button class="button-confirm" onclick="confirmChanges()">Confirm changes</button>
      </div>
    </div>

    <div id="customAlert" class="custom-alert">
      <div class="custom-alert-content">
          <span class="close-btn" onclick="closeCustomAlert()">&times;</span>
          <p id="alertMessage"></p>
          <button onclick="closeCustomAlert()">OK</button>
      </div>
    </div>


<script src="/js/edit-review.js"></script>
