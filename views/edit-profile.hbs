<link rel="stylesheet" href="/css/edit-profile.css">
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

<body>
  <input type="number" id="id" hidden value="{{user.userID}}">
    <div class="profile-body">
      <div class="profile-info">
        <h2>{{user.username}}</h2>
        <textarea name="User Description" class="profile-description" id="profile-description"> {{user.description}} </textarea>
      </div>

      <div class="profile-pic">
        <img src="{{user.profpic}}" alt="" id="pfp">
        <button onclick="changePFP()">Change Avatar</button>
      </div>
    </div>

    <div class="confirm-button">
      <button onclick="confirmChanges()">Confirm changes</button>
      <button onclick="deleteAccount()">Delete account</button>
    </div>


    <div id="customAlert" class="custom-alert">
        <div class="custom-alert-content">
            <span class="close-btn" onclick="closeCustomAlert()">&times;</span>
            {{!-- <p id="alertMessage"></p>
            <button onclick="closeCustomAlert()">OK</button> --}}
        </div>
    </div>

    <script src="/js/edit-profile.js"></script>
</body>