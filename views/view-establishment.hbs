{{> navbar}}
<link rel="stylesheet" href="/css/view-establishment.css">
<script src="/js/view-establishment.js" defer></script>

<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

<div class = "body"> <!--body container-->
    <div class = "establishment-list">
        <div class = "body"> <!--body container-->
            <div class = "establishment-list">
                {{#each resturants}}
                {{#unless deleted}}
                    <div class = "establishment"> <!-- estab1-->
                        <div class = "establishment-container"> <!-- certain establishment container 1-->
                            <div class="resto-image">
                                <img src="{{resturantIMG}}"/>
                            </div>

                            <div class = "text-container">
                                <div class = "name-font"> {{resturantName}} </div>

                                {{#ifEquals ../type "Owner"}}
                                    {{#ifEquals ownerID ../userID}}
                                        <button class="edit-button" onclick="sendName('{{resturantName}}', 'edit')">Edit</button>
                                    {{else}}
                                        <button class="edit-button" onclick="sendName('{{resturantName}}', 'edit')" style="display: none;">Edit</button>
                                    {{/ifEquals}}
                                {{else}}
                                    <button class="edit-button" onclick="sendName('{{resturantName}}', 'edit')" style="display: none;">Edit</button>
                                {{/ifEquals}}

                                <div class = "details-font">
                                    <p class="details-address">{{address}}</p>
                                    <div class="details-bestseller">
                                        Best sellers
                                            <ul>
                                                {{#each bestSellers}}
                                                    <li>{{this}}</li>
                                                {{/each}}
                                            </ul>
                                    </div>
                                        </div>
                                <button class = "button-container" onclick="sendName('{{this.resturantName}}', 'view')">View Establishment Reviews</button>
                                <button class = "button-container" onclick="sendName('{{this.resturantName}}', 'review')">Create Review</button>
                            </div>    
                        </div>
                    </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>




